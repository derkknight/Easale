<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- Icon -->
    <ImageView
            android:id="@+id/imgSaleIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"/>


    <!-- Title -->
    <TextView
            android:id="@+id/txtSaleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imgSaleIcon"/>

    <!-- Price -->
    <TextView
            android:id="@+id/txtSalePrice"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/title"
            android:textSize="10dp"/>

    <!-- Amount Sold Text -->
    <TextView
            android:id="@+id/txtSalesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtSaleTitle"/>


    <!-- Increment Button-->
    <ImageButton
            android:id="@+id/btnIncrement"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"/>

    <!-- Decrement Button -->
    <ImageButton
            android:id="@+id/btnDecrement"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/btnIncrement"/>

</RelativeLayout>